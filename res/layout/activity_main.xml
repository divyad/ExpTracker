<TabHost xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/tabhost"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >
    
    <LinearLayout 
       android:layout_width="match_parent"
       android:layout_height="match_parent" 
       android:orientation= "vertical" >
       
        <TabWidget  
            android:id="@android:id/tabs" 
    		android:layout_width="match_parent"
    		android:layout_height="wrap_content" >
        </TabWidget>
    
        <FrameLayout
            android:id="@android:id/tabcontent"  
    		android:layout_width="match_parent"
    		android:layout_height="match_parent">
            
             <LinearLayout
                 android:id="@+id/tab1"
                 android:layout_width="match_parent"
                 android:layout_height="fill_parent"
                 android:orientation="vertical" >

                 <TextView
                     android:id="@+id/textView5"
                     android:layout_width="wrap_content"
                     android:layout_height="wrap_content"
                     android:text="Net Balance"
                     android:textAppearance="?android:attr/textAppearanceMedium"  />

                 <TextView
                     android:id="@+id/textView6"
                     android:layout_width="wrap_content"
                     android:layout_height="wrap_content"
                     android:text="120000"
                     android:layout_marginBottom="20px"
                     />

                 <TextView
                     android:id="@+id/textView7"
                     android:layout_width="wrap_content"
                     android:layout_height="wrap_content"
                     android:text="Last Expense" 
                     android:textAppearance="?android:attr/textAppearanceMedium" />

                 <TextView
                     android:id="@+id/textView8"
                     android:layout_width="wrap_content"
                     android:layout_height="wrap_content"
                     android:text="Tuesday , 19th Nov, Ear ring for Divya from Tanishq" />

            </LinearLayout>
            
             <LinearLayout 
                  android:id="@+id/tab2"
       			  android:layout_width="fill_parent"
                  android:layout_height="fill_parent" 
                  android:orientation= "vertical"
                  android:padding="20dp" >
                 
                  <EditText
                      android:id="@+id/amountSpenttEdtTxt"
                      android:layout_width="fill_parent"
                      android:layout_height="wrap_content"
                      android:hint="@string/amt_spent"
                      android:ems="10"
                      android:inputType="number" >
                  </EditText>

                  <EditText
                      android:id="@+id/placeEdtTxt"
                      android:layout_width="fill_parent"
                      android:layout_height="wrap_content"
                      android:layout_marginTop="20dp"
                      android:ems="10" 
                      android:hint="@string/place" />

                  <EditText
                      android:id="@+id/descEdtTxt"
                      android:layout_width="fill_parent"
                      android:layout_height="wrap_content"
                      android:layout_marginTop="20dp"
                      android:ems="10"
                      android:inputType="textMultiLine"
                      android:hint="@string/desc"  />

                  <Spinner
                      android:id="@+id/spinner1"
                      android:layout_width="223dp"
                      android:layout_marginTop="20dp"
                      android:layout_height="32dp" />
                  
                  <TextView
                      android:id="@+id/textView4"
                      android:layout_width="fill_parent"
                      android:layout_marginTop="20dp"
                      android:layout_height="wrap_content"
                      android:text="Date" />
                  
                 <!--  <DatePicker
                      android:id="@+id/datePicker"
                      android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                       /> -->

                  <Button
                      android:id="@+id/add"
                      style="?android:attr/buttonStyleSmall"
                      android:layout_marginTop="20dp"
                      android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:text="Add Expense"
                      android:onClick="addExpense" />
                  
            </LinearLayout>
            
             <LinearLayout 
                  android:id="@+id/tab3"
       			  android:layout_width="wrap_content"
                  android:layout_height="fill_parent" 
                  android:orientation= "vertical" >
                  <TextView  android:id="@+id/textview"
                      android:layout_width="wrap_content"
                  	  android:layout_height="wrap_content" 
                  	 
                      />
                  
                  <ListView
				        android:id="@android:id/list"
				        android:layout_width="match_parent"
				        android:layout_height="wrap_content"
				        android:text="dhhdh" />
            </LinearLayout>
       	 </FrameLayout>
        
    </LinearLayout>
    
</TabHost>